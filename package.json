{
  "name": "draco3d",
  "version": "0.0.1",
  "description": "Draco is a library for compressing and decompressing 3D geometric meshes and point clouds. It is intended to improve the storage and transmission of 3D graphics.",
  "main": "dist/cjs/draco3d/index.js",
  "types": "dist/cjs/draco3d/index.d.ts",
  "files": [
    "dist/*/draco3d/*"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/draco3d/index.d.ts",
        "default": "./dist/esm/draco3d/index.js"
      },
      "require": {
        "types": "./dist/cjs/draco3d/index.d.ts",
        "default": "./dist/cjs/draco3d/index.js"
      }
    }
  },
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc -p tsconfig.esm.json && node tools/copy_wasm.js dist/esm",
    "build:cjs": "tsc -p tsconfig.cjs.json && node tools/copy_wasm.js dist/cjs",
    "prepack": "npm run build",
    "test": "npm run build:cjs && node dist/cjs/example.js"
  },
  "keywords": [
    "geometry",
    "compression",
    "mesh",
    "point cloud"
  ],
  "author": "Google Draco Team",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/google/draco.git"
  },
  "devDependencies": {
    "@types/node": "^22.15.18",
    "typescript": "^5.8.3"
  }
}
